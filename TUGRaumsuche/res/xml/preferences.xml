            android:summary="@string/search_hoersaal"
            android:title="@string/button_hoersaal" >
        </CheckBoxPreference>
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="search_seminar"
            android:summary="@string/search_seminar"
            android:title="@string/button_seminar" >
        </CheckBoxPreference>
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="search_labore"
            android:summary="@string/search_labore"
            android:title="@string/button_labor" >
        </CheckBoxPreference>
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="search_zeichen"
            android:summary="@string/search_zeichen"
            android:title="@string/button_zeichen" >
        </CheckBoxPreference>
    </PreferenceCategory>
    <PreferenceCategory
        android:key="cat_usage"
        android:title="@string/cat_usage" >
