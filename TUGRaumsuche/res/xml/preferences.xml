    <PreferenceCategory
        android:key="cat_data"
        android:title="@string/cat_data" >
        <Preference
            android:key="update_data"
            android:summary="@string/update_data_desc"
            android:title="@string/update_data" >
        </Preference>

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="update_reminder"
            android:summary="@string/update_remind_desc"
            android:title="@string/update_remind" >
        </CheckBoxPreference>

        <Preference
            android:key="reset_db"
            android:summary="@string/reset_database_desc"
            android:title="@string/reset_database" >
        </Preference>
    </PreferenceCategory>
    <PreferenceCategory
        android:key="cat_about"
        android:title="@string/cat_info" >
        <Preference
            android:key="about"
